{
  "name": "use-web-kit",
  "version": "0.2.1",
  "description": "A highly optimized, zero-dependency, lightweight npm library for React custom hooks focusing on performance and Browser APIs.",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "name": "use-web-kit",
    "test": "jest --env=jsdom",
    "test:watch": "jest --watch",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "hooks",
    "custom-hooks",
    "useIdleQueue",
    "useBroadcastState",
    "useAdaptivePolling",
    "requestIdleCallback",
    "BroadcastChannel",
    "Page Visibility API",
    "polling",
    "typescript"
  ],
  "author": "Tanush Bhootra <https://github.com/tanushbhootra576>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tanushbhootra576/use-web-kit.git"
  },
  "bugs": {
    "url": "https://github.com/tanushbhootra576/use-web-kit/issues"
  },
  "homepage": "https://github.com/tanushbhootra576/use-web-kit#readme",
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "typescript": "^5.7.0"
  }
}
